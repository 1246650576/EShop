<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.ncu.dao.UserDAO">
    <select id="queryUserByUsername" parameterType="string" resultType="User">
        select staff_code id,staff_name username,staff_password password,salt
        from t_staff
        where staff_name = #{username}
    </select>
    
    <insert id="insertUser" parameterType="User">
        insert into t_staff(staff_code,staff_name,staff_password,salt) values(7,#{username},#{password},#{salt})
    </insert>
</mapper>